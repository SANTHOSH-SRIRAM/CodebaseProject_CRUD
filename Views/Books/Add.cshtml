@model CodebaseProject.Models.AddBookViewModel


@{
}
<h2>Add Books</h2>
<form method="post" action="Add" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">BookName</label>
        <input type="text" class="form-control" asp-for="BookName" >
       
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Edition</label>
        <input type="number" class="form-control" asp-for="Edition" >
       
    </div>

    <div class="mb-3">
        <label for="" class="form-label">Author</label>
        <input type="text" class="form-control" asp-for="Author" >
       
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>